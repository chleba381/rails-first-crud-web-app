<h2>Zaregistrovat se</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field form-group">
    <%= f.label "Email " %> 
    <em>
      (budete jej používat k přihlášení)
    </em>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control" %>
  </div>

  <div class="field form-group">
    <%= f.label "Heslo" %>
    <% if @minimum_password_length %>
    <em>(minimum je <%= @minimum_password_length %> symbolů)</em>
    <% end %>
    <%= f.password_field :password, autocomplete: "new-password", class:"form-control" %>
  </div>

  <div class="field form-group">
    <%= f.label "Potvrdit heslo" %>
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class:"form-control" %>
  </div>

  <div class="actions" style="margin-top: 20px; margin-bottom: 20px;">
    <%= f.submit "Zaregistrovat se", class:"btn btn-outline-dark" %>
  </div>
<% end %>

<%= link_to "<< Zpět", :back, class:"btn btn-outline-dark" %><br/>
<%= render "devise/shared/links" %>
